<div class="row">
	<div class="span10 offset1">
		<h1><%= link_to @eyre.description, @eyre %></h1>
		<hr/>
		<% if @eyre.items.any? %>
		<table border="1px" cellpadding="10px">
			<tr>
				<th>Processo</th>
				<th>Classe</th>
				<th>Situação</th>
				<th>Última Mov.</th>
				<th></th>
				<th colspan="3">Opções</th>
			</tr>
			<% @eyre.items.each do |item| %>
			<tr>
				<td><%= item.process %></td>
				<td><%= item.group %></td>
				<td><%= item.status %></td>
				<td><%= item.last.strftime("%d %m %Y") %></td>
				<th><% if item.status == "PARALIZADO" %>
				<%= (Date.parse(Time.now.to_s) - Date.parse(item.last.to_s)).to_i %></td>
				<%end%></th>
				<td><%= link_to 'Ver', [@eyre, item] %></td>
				<td><%= link_to 'Editar', edit_eyre_item_path(@eyre, item) %></td>
				<td><%= link_to 'Remover', [@eyre, item], :confirm => 'Tem certeza?',
				:method => :delete %></td>
			</tr>
			<% end %>
		</table>
		<% end %>
		<br/>
		<%= link_to 'Inserir +', new_eyre_item_path(@eyre) %>
	</div>
</div>