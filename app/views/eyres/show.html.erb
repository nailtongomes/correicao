<div class="row">
	<div class="span10 offset1">
		<h1><%= link_to @eyre.description, @eyre %></h1>
		<hr/>
		<% if @eyre.items.any? %>
		<table border="1px" cellpadding="10px">
			<tr style="background-color: #a4cee3">
				<th>Processo</th>
				<th>Classe</th>
				<th>Situação</th>
				<th>Última Mov.</th>
				<th></th>
				<th colspan="3">Opções</th>
			</tr>
			<% @eyre.items.each do |item| %>
			<tr>
				<td><%= item.process %></td>
				<td><%= item.group %></td>
				<td><%= item.status %></td>
				<td><%= item.last.strftime("%d %m %Y") %></td>
				<th><% if item.status == "PARALISADO" %>
				<%= (Date.parse(Time.now.to_s) - Date.parse(item.last.to_s)).to_i %></td>
				<%end%></th>
				<td><%= link_to 'Ver', [@eyre, item], :class => 'btn btn-info' %></td>
				<td><%= link_to 'Editar', edit_eyre_item_path(@eyre, item), :class => 'btn' %></td>
				<td><%= link_to 'Remover', [@eyre, item], :confirm => 'Tem certeza?',
				:method => :delete, :class => 'btn btn-danger' %></td>
			</tr>
			<% end %>
		</table>
		<hr/><h3>Estatísticas</h3><hr/>
		<p>EM ORDEM: <%= Item.where("status = ? AND eyre_id = ?", "EM ORDEM", @eyre.id).count.to_s %></p>
		<p>SUSPENSOS: <%= Item.where("status = ? AND eyre_id = ?", "SUSPENSO", @eyre.id).count.to_s %></p>
		<p>PARALISADOS: <%= Item.where("status = ? AND eyre_id = ?", "PARALISADO", @eyre.id).count.to_s %></p>
		<hr/>
		<p><b>TOTAL:</b> <%= Item.where("eyre_id = ?", @eyre.id).count.to_s %></p>
		<hr/>
		<% end %>
		<br/>
		<%= link_to 'Inserir +', new_eyre_item_path(@eyre), :class => 'btn btn-primary' %>
	</div>
</div>